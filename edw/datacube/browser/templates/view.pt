<html metal:use-macro="here/main_template/macros/master"
  i18n:domain="plone">
  <div metal:fill-slot="content-core">
    <div tal:repeat="wid python:['endpoint', 'dataset']">
      <tal:block define="field python:here.getField(wid);
                        label python:field.widget.label;
                        value python:field.getAccessor(here)()">
        <strong tal:content="label" />: <span tal:attributes="id string:${wid}-value" tal:content="value"/>
      </tal:block>
    </div>
    <h2>Dataset metadata</h2>
    <dl id="dataset-metadata">
      <dt></dt>
      <dd></dd>
    </dl>
    <h2>Dimensions</h2>
    <table id="dataset-dimensions">
      <thead>
        <tr>
          <th>Notation</th>
          <th>Label</th>
          <th>Comment</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      </tbody>
    </table>
    <h2>Attributes</h2>
    <table id="dataset-attributes">
      <thead>
        <tr>
          <th>Notation</th>
          <th>Label</th>
          <th>Comment</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      </tbody>
    </table>
    <h2>Measures</h2>
    <table id="dataset-measures">
      <thead>
        <tr>
          <th>Notation</th>
          <th>Label</th>
          <th>Comment</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      </tbody>
    </table>
    <h2>Download Data</h2>
    <strong>Formats suitable for human consumption</strong>
    <ul>
      <li><a href="@@html">HTML</a></li>
      <li><a href="@@csv">CSV</a></li>
      <li><a href="@@tsv">TSV</a></li>
    </ul>
    <strong>Formats suitable for machine-to-machine communication</strong>
    <ul>
      <li>Data: <a href="@@data-rdf">RDF</a></li>
      <li>Metadata and codelists: <a href="@@metadata-rdf">CSV</a></li>
    </ul>
  </div>
</html>
